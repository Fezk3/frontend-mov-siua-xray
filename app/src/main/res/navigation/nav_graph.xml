<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.uniactivos.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_mainMenu2"
            app:destination="@id/mainMenu2" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPassword"
            app:destination="@id/forgotPassword" />
    </fragment>
    <fragment
        android:id="@+id/mainMenu2"
        android:name="com.example.uniactivos.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenu2_to_reports"
            app:destination="@id/reports" />
        <action
            android:id="@+id/action_mainMenu2_to_aulas"
            app:destination="@id/aulas" />
        <action
            android:id="@+id/action_mainMenu2_to_aulas2"
            app:destination="@id/aulas" />
    </fragment>
    <fragment
        android:id="@+id/forgotPassword"
        android:name="com.example.uniactivos.ForgotPassword"
        android:label="fragment_forgot_password"
        tools:layout="@layout/fragment_forgot_password" >
        <action
            android:id="@+id/action_forgotPassword_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/reports"
        android:name="com.example.uniactivos.Reports"
        android:label="fragment_reports"
        tools:layout="@layout/fragment_reports" >
        <action
            android:id="@+id/action_reports_to_mainMenu2"
            app:destination="@id/mainMenu2" />
    </fragment>
    <fragment
        android:id="@+id/aulas"
        android:name="com.example.uniactivos.Aulas"
        android:label="fragment_aulas"
        tools:layout="@layout/fragment_aulas" >
        <action
            android:id="@+id/action_aulas_to_classroomViewFragment"
            app:destination="@id/classroomViewFragment" />
    </fragment>
    <fragment
        android:id="@+id/classroomViewFragment"
        android:name="com.example.uniactivos.ClassroomViewFragment"
        android:label="fragment_classroom_view"
        tools:layout="@layout/fragment_classroom_view" >
        <action
            android:id="@+id/action_classroomViewFragment_to_mainMenu2"
            app:destination="@id/mainMenu2" />
    </fragment>
</navigation>