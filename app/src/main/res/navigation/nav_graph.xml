<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainMenu">
    <action
        android:id="@+id/action_mainMenu_to_mySchedule"
        app:destination="@id/mySchedule" />
    <action
        android:id="@+id/action_mainMenu_to_teacherDynamicForm"
        app:destination="@id/teacherDynamicForm" />
    <action
        android:id="@+id/action_teacherStaticForm_to_mainMenu"
        app:destination="@id/mainMenu" />
    <fragment
        android:id="@+id/mainMenu"
        android:name="com.example.uniactivos.MainMenu"
        android:label="fragment_main_menu"
        tools:layout="@layout/fragment_main_menu" >
        <action
            android:id="@+id/action_mainMenu_to_mySchedule"
            app:destination="@id/mySchedule" />
        <action
            android:id="@+id/action_mainMenu_to_teacherDynamicForm"
            app:destination="@id/teacherDynamicForm" />
        <action
            android:id="@+id/action_mainMenu_to_guardReports"
            app:destination="@id/guardReports" />
        <action
            android:id="@+id/action_mainMenu_to_aulas"
            app:destination="@id/aulas" />
    </fragment>
    <fragment
        android:id="@+id/mySchedule"
        android:name="com.example.uniactivos.MySchedule"
        android:label="fragment_my_schedule"
        tools:layout="@layout/fragment_my_schedule" />
    <fragment
        android:id="@+id/teacherDynamicForm"
        android:name="com.example.uniactivos.TeacherDynamicForm"
        android:label="fragment_teacher_dynamic_form"
        tools:layout="@layout/fragment_teacher_dynamic_form" >
        <action
            android:id="@+id/action_teacherDynamicForm_to_teacherStaticForm"
            app:destination="@id/teacherStaticForm" />
    </fragment>
    <fragment
        android:id="@+id/teacherStaticForm"
        android:name="com.example.uniactivos.TeacherStaticForm"
        android:label="fragment_teacher_static_form"
        tools:layout="@layout/fragment_teacher_static_form" >
        <action
            android:id="@+id/action_teacherStaticForm_to_mainMenu"
            app:destination="@id/mainMenu" />
    </fragment>
    <fragment
        android:id="@+id/profile2"
        android:name="com.example.uniactivos.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/loginFragment2"
        android:name="com.example.uniactivos.LoginFragment"
        android:label="activity_main"
        tools:layout="@layout/activity_main" >
        <action
            android:id="@+id/action_loginFragment2_to_mainMenu"
            app:destination="@id/mainMenu" />
    </fragment>
    <fragment
        android:id="@+id/guardReports"
        android:name="com.example.uniactivos.GuardReports"
        android:label="fragment_guard_reports"
        tools:layout="@layout/fragment_guard_reports" />
    <fragment
        android:id="@+id/aulas"
        android:name="com.example.uniactivos.Aulas"
        android:label="fragment_aulas"
        tools:layout="@layout/fragment_aulas" />
</navigation>