<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Aulas">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/title_pending_assets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80sp"
        android:layout_gravity="top|center"
        android:gravity="center"
        android:text="@string/tittle_ListaAulas"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350sp"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">
            <TableLayout
                android:id="@+id/tableLayout_pending_assets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:padding="16dp" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:padding="5dp"
                        android:text="@string/table_head_classroom"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:padding="5dp"
                        android:text="@string/subtitle_HoraFinal"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="3"
                        android:padding="5dp"
                        android:text="@string/subtitle_HoraFinal"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:padding="5dp"
                        android:text="@string/subtitle_VerDetalle"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow android:background="@color/gray_blue">
                    <TextView
                        android:text="Dato 1"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_column="1"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />
                    <TextView
                        android:text="Dato 2"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_column="2"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />
                    <TextView
                        android:text="Dato 3"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_column="3"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"  />


                    <Button
                        android:id="@+id/btn_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="6"
                        android:padding="5dp"
                        android:text="@string/btn_Detalle"
                        android:textStyle="bold" />
                    <!--android:onClick="openDialog"-->
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>
    </LinearLayout>

</FrameLayout>