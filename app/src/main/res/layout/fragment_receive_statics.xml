<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ReceiveStatics">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/receive_statics_title"
        android:textSize="30sp"
        android:textColor="@color/blue"
        android:layout_marginTop="60sp"
        android:textAlignment="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130sp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="25sp">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="20sp"
                android:text="@string/title_aula"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:id="@+id/aula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:text="C-18"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120sp"
                android:text="@string/title_estado"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:text="Recibido"
                android:layout_marginRight="15sp"
                android:textColor="@color/black"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="25sp"
            >

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_profesor"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:id="@+id/profesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Marvin"
                android:layout_marginStart="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_guarda"
                android:textColor="@color/black"
                android:layout_marginStart="60sp"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:id="@+id/guarda"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan"
                android:layout_marginStart="8sp"
                android:textColor="@color/black"
                android:textSize="20sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_marginBottom="25sp">


            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_hora_inicio"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:text="11:00"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:text="@string/title_hora_fin"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:text="11:00"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/title_fecha"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:background="@drawable/text_border"
                android:padding="2sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8sp"
                android:text="23/04/12"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400sp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="@string/title_activos_title"
                android:textColor="@color/blue"
                android:textSize="30sp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <TableLayout
                    android:id="@+id/tableLayout_activos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:stretchColumns="*"
                    android:padding="16dp"
                    tools:ignore="UselessParent,VisualLintBounds">

                    <TableRow android:background="@color/black" >
                        <TextView
                            android:text="@string/table_head_name"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_column="1"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="@string/table_head_cantidad"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_column="2"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </TableRow>

                    <TableRow android:background="@color/gray_blue">
                        <TextView
                            android:text="Dato 1"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_column="1"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  />
                        <TextView
                            android:text="Dato 2"
                            android:textSize="18sp"
                            android:textColor="@color/black"
                            android:layout_column="2"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  />
                    </TableRow>

                </TableLayout>
            </HorizontalScrollView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="200sp">


        <Button
            android:id="@+id/buttonAceptarActivos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:text="@string/btn_aceptar"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </LinearLayout>

</FrameLayout>