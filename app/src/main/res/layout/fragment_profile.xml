<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.Profile">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:text="@string/profile_title"
        android:layout_marginTop="90sp"
        android:layout_marginBottom="10sp"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="180dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_cedual"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="20sp"
                />
            <TextView
                android:id="@+id/cedulabase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2010212"
                android:textColor="@color/black"
                android:layout_marginStart="10sp"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_nombre"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="20sp"
                />
            <TextView
                android:id="@+id/nombrebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Juan"
                android:textColor="@color/black"
                android:layout_marginStart="10sp"
                android:textSize="25sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_apellido"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="20sp"
                />
            <TextView
                android:id="@+id/apellidobase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fernandez"
                android:textColor="@color/black"
                android:layout_marginStart="10sp"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="35sp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subtitle_rol"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:layout_marginStart="20sp"
                />
            <TextView
                android:id="@+id/Rolbase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_professor"
                android:textColor="@color/black"
                android:layout_marginStart="10sp"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnChangePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="125sp"
        android:textSize="15sp"
        android:text="@string/btn_cambiar_contrasena" />


</FrameLayout>